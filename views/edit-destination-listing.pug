extends base
block navigation_content 
    include _navigation
block content 
    section.dashboard.gray-bg.padd-0.mrg-top-50
        .container-fluid
            .row
                .col-lg-2.col-md-2.col-sm-3.dashboard-bg
                    // /. NAV TOP
                    nav.navbar.navbar-side
                        // Start Logo Header Navigation
                        .navbar-header
                            button.navbar-toggle(type='button' data-toggle='collapse' data-target='#dashboard-menu')
                                i.fa.fa-bars
                    include _dashboard_sidebar
                    include _location_modal
                    include _info_confirm_modal
                    include _resource_delete_modal
                    // /. NAV SIDE
                .col-lg-10.col-md-10.col-sm-9.col-lg-push-2.col-md-push-2.col-sm-push-3
                    .row.mrg-0.mrg-top-20
                        .tr-single-box
                            .tr-single-header
                                h5.hidden(id="resourceId")= payload._id

                                h3.dashboard-title edit this destination listing
                            .tr-single-body
                                form#msform
                                        .text-center
                                            h2.fs-title Basic Information
                                            h3.fs-subtitle This is step 1
                                        .row
                                            .col-xs-6
                                                label destination Name
                                                input#resource_name.form-control(type='text' value= payload.name  placeholder='Galaxy cruiser destination')

                                            .col-xs-6
                                                label Upload itenerary
                                                .cf-input
                                                    label.custom-file
                                                        input#itenerary.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label(for='start_date') pick start date
                                                input#start_date.datepicker_input.form-control.border-2(type='date', required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='end_date') pick end date
                                                input#end_date.datepicker_input.form-control.border-2(type='date', required='', placeholder='DD/MM/YYYY')
                                                                                        
                                            .col-xs-6
                                                label choose start location
                                                input#destination_location0.form-control(type='text' placeholder='lat, long')
                                            .col-xs-6
                                                label choose guide
                                                .sl-box
                                                    select#destination_guide.form-control.wide
                                                        option 5c8a1f292f8fb814b56fa184
                                                        option 5c8a1f4e2f8fb814b56fa185
                                                        option 5c8a201e2f8fb814b56fa186
                                                        option 5c8a21d02f8fb814b56fa189
                                                        option 5c8a23412f8fb814b56fa18c
                                                        option 5c8a21f22f8fb814b56fa18a
                                            .col-xs-6
                                                label choose difficulty
                                                .sl-box
                                                    select#destination_difficulty.form-control.wide
                                                        option easy
                                                        option medium
                                                        option difficult                                      
                                            .col-xs-6
                                                label price/person
                                                input#destination_price.form-control(type='text' value= payload.price placeholder='$555')
                                            .col-xs-6
                                                label duration
                                                input#destination_duration.form-control(type='text' value= payload.duration placeholder='5 hours')
                                            .col-xs-6
                                                label maximum group size
                                                input#destination_groupsize.form-control(type='text' value = payload.maxGroupSize placeholder='12')
                                            .col-xs-6
                                                label destination banner Image
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_featured-image.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 1
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery1.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 2
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery2.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 3
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery3.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 4
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery4.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-12
                                                label destination summary
                                                textarea#dn_summary.form-control.height-120( placeholder='simple one liner description')= payload.summary
                                            .col-xs-12
                                                label destination description
                                                textarea#dn_description.form-control.height-120( placeholder='long description about destination')= payload.description
                                                h2#error.fs-title ALL FIELDS ARE REQUIRED

                                        h2.fs-title Available Amenities
                                        .row
                                            .col-md-12
                                                ul.add-amenities
                                                    each amenity, key in amenities 
                                                        
                                                        li
                                                            span.custom-checkbox
                                                                input(type='checkbox' id=`${key+1}` checked= payload.amenities.includes(amenity.toLowerCase())? true: false )
                                                                label(for=`${key+1}`)= amenity


                                        input.next.action-button(type='submit' name='update' value='update' id="destination_update")
                                        input.next.action-button(type='submit' name='delete' value='delete' id="destination_delete")

    block content_contact 
        include _contact

    script(src='/assets/js/destEdit.js')
    