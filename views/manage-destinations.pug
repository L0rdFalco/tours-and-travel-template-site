extends base

block navigation_content 
    include _navigation
block content 
    section.dashboard.gray-bg.padd-0.mrg-top-50
        .container-fluid
            .row
                .col-lg-2.col-md-2.col-sm-3.dashboard-bg
                    // /. NAV TOP
                    nav.navbar.navbar-side
                        // Start Logo Header Navigation
                        .navbar-header
                            button.navbar-toggle(type='button' data-toggle='collapse' data-target='#dashboard-menu')
                                i.fa.fa-bars
                        include _dashboard_sidebar
                    // /. NAV SIDE
                .col-lg-10.col-md-10.col-sm-9.col-lg-push-2.col-md-push-2.col-sm-push-3
                    .row.mrg-0.mrg-top-20
                        .tr-single-box
                            .tr-single-header
                                h3.dashboard-title Manage Destinations
                            .tr-single-body
                                .row
                                    each dest in payload
                                        -const fullprice = dest.price*1.10
                                        .col-md-4.col-sm-6
                                            article.destination-box.style-1
                                                .destination-box-image
                                                    figure
                                                        a(href=`/dest-edit/${dest.id}`)
                                                            img.img-responsive.listing-box-img(src=`assets/img/destination/${dest.imageCover}` alt='')
                                                            .list-overlay
                                                            .read_more 
                                                                span edit listing
                                                        .discount-flick -10%
                                                        h4.destination-place
                                                            a(href=`/dest-edit/${dest.id}`)= `${dest.name}`
                                                        a.list-like.left(href='#')
                                                            i.ti-heart
                                                .entry-meta
                                                    .meta-item.meta-rating
                                                        i.fa.fa-star
                                                        i.fa.fa-star
                                                        i.fa.fa-star
                                                        i.fa.fa-star
                                                        i.fa.fa-star-half
                                                    .meta-item.meta-comment.fl-right
                                                        span.text-through= fullprice
                                                        span.real-price.padd-l-10.font-bold= `${dest.price}`
                                                .inner-box
                                                    .box-inner-ellipsis
                                                        h4.entry-location
                                                            a(href=`/dest-edit/${dest.id}`)= `${dest.address}`
                                                        .price-box
                                                            .destination-price.fl-right
                                                                a(href='#')
                                                                    i.theme-cl.ti-arrow-right

                                .row
                                    ul.pagination
                                        li.page-item
                                            a.page-link(href='#' aria-label='Previous')
                                                span.ti-arrow-left
                                                span.sr-only Previous
                                        li.page-item
                                            a.page-link(href='#') 1
                                        li.page-item
                                            a.page-link(href='#') 2
                                        li.page-item.active
                                            a.page-link(href='#') 3
                                        li.page-item
                                            a.page-link(href='#') 4
                                        li.page-item
                                            a.page-link(href='#') 5
                                        li.page-item
                                            a.page-link(href='#' aria-label='Next')
                                                span.ti-arrow-right
                                                span.sr-only Next
    block content_contact 
        include _contact

block content_footer 
    include _footer