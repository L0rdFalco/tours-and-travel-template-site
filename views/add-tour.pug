                                                            label(for='11')
                                                        | Free Coffee
                                                    li
                                                        span.custom-checkbox
                                                            input#12(type='checkbox')
                                                            label(for='12')
                                                        | Pets Allowed
                                                    li
                                                        span.custom-checkbox
                                                            input#13(type='checkbox')
                                                            label(for='13')
                                                        | Hot Water
                                                    li
                                                        span.custom-checkbox
                                                            input#14(type='checkbox')
                                                            label(for='14')
                                                        | Attached garage
                                                    li
                                                        span.custom-checkbox
                                                            input#15(type='checkbox')
