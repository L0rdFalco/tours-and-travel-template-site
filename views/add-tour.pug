extends base

block content 
    section.dashboard.gray-bg.padd-0.mrg-top-50
        .container-fluid
            .row
                .col-lg-2.col-md-2.col-sm-3.dashboard-bg
                    // /. NAV TOP
                    nav.navbar.navbar-side
                        // Start Logo Header Navigation
                        .navbar-header
                            button.navbar-toggle(type='button' data-toggle='collapse' data-target='#dashboard-menu')
                                i.fa.fa-bars
                    include _dashboard_sidebar
                    include _location_modal
                    // /. NAV SIDE
                .col-lg-10.col-md-10.col-sm-9.col-lg-push-2.col-md-push-2.col-sm-push-3
                    .row.mrg-0.mrg-top-20
                        .tr-single-box
                            .tr-single-header
                                h3.dashboard-title Add Tours
                            .tr-single-body
                                form#msform
                                    // progressbar
                                    ul#progressbar
                                        li.active Basic Information
                                        li Available Amenities
                                        li overview
                                        li success page
                                    // fieldsets
                                    fieldset
                                        .text-center
                                            h2.fs-title Basic Information
                                            h3.fs-subtitle This is step 1
                                        .row
                                            .col-xs-6
                                                label Tour Name
                                                input#tourname.form-control(type='text' value="test123" placeholder='Galaxy cruiser tour')

                                            .col-xs-6
                                                label Upload itenerary
                                                .cf-input
                                                    label.custom-file
                                                        input#file1.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label(for='datepicker1') pick first start date
                                                input#datepicker1.datepicker_input.form-control.border-2(type='text',value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='datepicker2') pick second start date
                                                input#datepicker2.datepicker_input.form-control.border-2(type='text', value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='datepicker3') pick third start date
                                                input#datepicker3.datepicker_input.form-control.border-2(type='text', value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='datepicker4') pick fourth start date
                                                input#datepicker4.datepicker_input.form-control.border-2(type='text', value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label add first location
                                                input#location1.form-control(type='text' placeholder='lat, long')
                                            .col-xs-6
                                                label add second location
                                                input#location2.form-control(type='text' placeholder='lat, long')
                                            .col-xs-6
                                                label add third location
                                                input#location3.form-control(type='text' placeholder='lat, long')
                                            .col-xs-6
                                                label add fourth location
                                                input#location4.form-control(type='text' placeholder='lat, long')                                               
                                            .col-xs-6
                                                label choose start location
                                                input#location0.form-control(type='text' placeholder='lat, long')
                                            .col-xs-6
                                                label choose guide
                                                .sl-box
                                                    select#guide.form-control.wide
                                                        option self-guided
                                                        option guide name 1
                                                        option guide name 2
                                                        option guide name 3
                                                        option guide name 4
                                                        option guide name 5
                                            .col-xs-6
                                                label choose difficulty
                                                .sl-box
                                                    select#difficulty.form-control.wide
                                                        option easy
                                                        option medium
                                                        option difficult                            
                                            .col-xs-6
                                                label price/person
                                                input#price.form-control(type='text' value="test123" placeholder='$555')
                                            .col-xs-6
                                                label duration
                                                input#duration.form-control(type='text' value="test123" placeholder='5 hours')
                                            .col-xs-6
                                                label maximum group size
                                                input#groupsize.form-control(type='text' value="test123" placeholder='12')


                                            .col-xs-6
                                                label Tour banner Image
                                                .cf-input
                                                    label.custom-file
                                                        input#featured-image.custom-file-input(type='file')
                                                        span.custom-file-control

                                            .col-xs-6
                                                label Upload tour gallery image 1
                                                .cf-input
                                                    label.custom-file
                                                        input#tour_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload tour gallery image 2
                                                .cf-input
                                                    label.custom-file
                                                        input#tour_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload tour gallery image 3
                                                .cf-input
                                                    label.custom-file
                                                        input#tour_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload tour gallery image 4
                                                .cf-input
                                                    label.custom-file
                                                        input#tour_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-12
                                                label tour summary
                                                textarea#tr_summary.form-control.height-120(value="test123" placeholder='simple one liner description')
                                            .col-xs-12
                                                label tour description
                                                textarea#tr_description.form-control.height-120(value="test123" placeholder='long description about tour')
                                                h2#error.fs-title ALL FIELDS ARE REQUIRED

                                        input.next.action-button(type='button' name='next' value='Next' id='tour_next1')
                                    fieldset
                                        h2.fs-title Available Amenities
                                        h3.fs-subtitle Your presence on the social network
                                        .row
                                            .col-md-12
                                                ul.add-amenities
                                                    li
                                                        span.custom-checkbox
                                                            input#1(type='checkbox')
                                                            label(for='1')
                                                        | Satellite TV
                                                    li
                                                        span.custom-checkbox
                                                            input#2(type='checkbox')
                                                            label(for='2')
                                                        | Coffeemaker
                                                    li
                                                        span.custom-checkbox
                                                            input#3(type='checkbox')
                                                            label(for='3')
                                                        | Hair Dryer
                                                    li
                                                        span.custom-checkbox
                                                            input#4(type='checkbox')
                                                            label(for='4')
                                                        | Swimming Pool
                                                    li
                                                        span.custom-checkbox
                                                            input#5(type='checkbox')
                                                            label(for='5')
                                                        | Room Service
                                                    li
                                                        span.custom-checkbox
                                                            input#6(type='checkbox')
                                                            label(for='6')
                                                        | Luxury Bedding
                                                    li
                                                        span.custom-checkbox
                                                            input#7(type='checkbox')
                                                            label(for='7')
                                                        | Good Showers
                                                    li
                                                        span.custom-checkbox
                                                            input#8(type='checkbox')
                                                            label(for='8')
                                                        | Free Parking
                                                    li
                                                        span.custom-checkbox
                                                            input#9(type='checkbox')
                                                            label(for='9')
                                                        | Free Wifi
                                                    li
                                                        span.custom-checkbox
                                                            input#10(type='checkbox')
                                                            label(for='0')
                                                        | Bath towel
                                                    li
                                                        span.custom-checkbox
                                                            input#11(type='checkbox')
                                                            label(for='11')
                                                        | Free Coffee
                                                    li
                                                        span.custom-checkbox
                                                            input#12(type='checkbox')
                                                            label(for='12')
                                                        | Pets Allowed
                                                    li
                                                        span.custom-checkbox
                                                            input#13(type='checkbox')
                                                            label(for='13')
                                                        | Hot Water
                                                    li
                                                        span.custom-checkbox
                                                            input#14(type='checkbox')
                                                            label(for='14')
                                                        | Attached garage
                                                    li
                                                        span.custom-checkbox
                                                            input#15(type='checkbox')
                                                            label(for='15')
                                                        | Elevator
                                                    li
                                                        span.custom-checkbox
                                                            input#16(type='checkbox')
                                                            label(for='16')
                                                        | Spa/Sauna
                                                    li
                                                        span.custom-checkbox
                                                            input#17(type='checkbox')
                                                            label(for='17')
                                                        | Indoor pool
                                                    li
                                                        span.custom-checkbox
                                                            input#18(type='checkbox')
                                                            label(for='18')
                                                        | Security cameras
                                        input.previous.action-button(type='button' name='tour_previous1' value='Previous' id="tour_previous1")
                                        input.next.action-button(type='button' name='tour_next2' value='Next' id="tour_next2")
                                    fieldset
                                        .row
                                            .col-md-12.text-center
                                                p#tour_heading
                                                |
                                                p#tour_summary
                                                    strong Hi Daniel
                                                    | , this is the tour overview:
                                        input.previous.action-button(type='button' name='tour_previous2' value='Previous' id="tour_previous2")
                                        input.next.action-button(type='button' name='tour_submit' value='submit' id="tour_submit")
                                    fieldset
                                        .row
                                            .col-md-12.text-center
                                                i.ti-thumb-up.cl-success.font-50
                                                h3.cl-success Congratulations!
                                                p
                                                    strong Hi Daniel
                                                    | , Your tour listing has been submitted successfully            
    block content_contact 
        include _contact
