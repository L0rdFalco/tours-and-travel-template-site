extends base

block content 
    section.dashboard.gray-bg.padd-0.mrg-top-50
        .container-fluid
            .row
                .col-lg-2.col-md-2.col-sm-3.dashboard-bg
                    // /. NAV TOP
                    nav.navbar.navbar-side
                        // Start Logo Header Navigation
                        .navbar-header
                            button.navbar-toggle(type='button' data-toggle='collapse' data-target='#dashboard-menu')
                                i.fa.fa-bars
                        #dashboard-menu.collapse.sidebar-collapse
                            .profile-wrapper
                                .profile-wrapper-thumb
                                    img.img-responsive.img-circle(src='assets/img/user-3.jpg' alt='')
                                    span.dashboard-user-status.bg-success
                                h4 Duke Daniel
                            ul#main-menu.nav
                                li
                                    a(href='/dashboard')
                                        i.fa.fa-dashboard(aria-hidden='true')
                                        | Dashboard
                                li
                                    a(href='/messages')
                                        i.ti-email(aria-hidden='true')
                                        | Messages
                                li
                                    a(href='javascript:void(0)')
                                        i.fa.fa-clone(aria-hidden='true')
                                        | Manage Listing 
                                        span.fa.arrow
                                    ul.nav.nav-second-level
                                        li
                                            a(href='/manage-hotels')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Manage Hotels
                                        li
                                            a(href='/manage-tours')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Manage Tours
                                        li
                                            a(href='/manage-destinations')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Manage Destinations
                                        li
                                            a(href='/manage-restaurants')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Manage Restaurants
                                li.active
                                    a(href='javascript:void(0)')
                                        i.ti-location-pin(aria-hidden='true')
                                        | Add Listings 
                                        span.fa.arrow
                                    ul.nav.nav-second-level
                                        li
                                            a(href='/add-hotel')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Add Hotels
                                        li
                                            a(href='/add-tour')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Add Tours
                                        li
                                            a(href='/add-destination')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Add Destinations
                                        li
                                            a(href='/add-restaurant')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Add Restaurants
                                li
                                    a(href='/invoice')
                                        i.fa-print(aria-hidden='true')
                                        | Invoice
                                li
                                    a(href='/javascript:void(0)')
                                        i.ti-calendar(aria-hidden='true')
                                        | My Booking 
                                        span.fa.arrow
                                    ul.nav.nav-second-level
                                        li
                                            a(href='/bookings')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Bookings
                                li
                                    a(href='javascript:void(0)')
                                        i.fa.fa-cog(aria-hidden='true')
                                        | Settings 
                                        span.fa.arrow
                                    ul.nav.nav-second-level
                                        li
                                            a(href='/basic-settings')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Basic Settings
                                        li
                                            a(href='/site-settings')
                                                i.fa.fa-circle-o-notch(aria-hidden='true')
                                                | Site Settings
                                li
                                    a(href='/my-profile')
                                        i.ti-user(aria-hidden='true')
                                        | My Profile
                                li.log-off
                                    a(href='/login')
                                        i.fa.fa-power-off(aria-hidden='true')
                                        | Logout
                    // /. NAV SIDE
                .col-lg-10.col-md-10.col-sm-9.col-lg-push-2.col-md-push-2.col-sm-push-3
                    .row.mrg-0.mrg-top-20
                        .tr-single-box
                            .tr-single-header
                                h3.dashboard-title Add Tours
                            .tr-single-body
                                form#msform
                                    // progressbar
                                    ul#progressbar
                                        li.active Basic Information
                                        li Available Amenities
                                        li overview
                                        li success page
                                    // fieldsets
                                    fieldset
                                        .text-center
                                            h2.fs-title Basic Information
                                            h3.fs-subtitle This is step 1
                                        .row
                                            .col-xs-6
                                                label Tour Name
                                                input.form-control(type='text' value="test123" placeholder='Galaxy cruiser tour')

                                            .col-xs-6
                                                label Upload itenerary
                                                .cf-input
                                                    label.custom-file
                                                        input#file1.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label(for='datepicker1') pick first start date
                                                input#datepicker1.datepicker_input.form-control.border-2(type='text',value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='datepicker1') pick second start date
                                                input#datepicker2.datepicker_input.form-control.border-2(type='text', value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='datepicker1') pick third start date
                                                input#datepicker3.datepicker_input.form-control.border-2(type='text', value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='datepicker1') pick fourth start date
                                                input#datepicker4.datepicker_input.form-control.border-2(type='text', value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label add first location
                                                input#location1.form-control(type='text' value="test123" placeholder='lat, long')
                                            .col-xs-6
                                                label add second location
                                                input#location2.form-control(type='text' value="test123" placeholder='lat, long')
                                            .col-xs-6
                                                label add third location
                                                input#location3.form-control(type='text' value="test123" placeholder='lat, long')
                                            .col-xs-6
                                                label add fourth location
                                                input#location4.form-control(type='text' value="test123" placeholder='lat, long')                                               
                                            .col-xs-6
                                                label choose start location
                                                input#location0.form-control(type='text' value="test123" placeholder='lat, long')
                                            .col-xs-6
                                                label choose guide
                                                .sl-box
                                                    select#guide.form-control.wide
                                                        option self-guided
                                                        option guide name 1
                                                        option guide name 2
                                                        option guide name 3
                                                        option guide name 4
                                                        option guide name 5
                                            .col-xs-6
                                                label choose difficulty
                                                .sl-box
                                                    select#rating.form-control.wide
                                                        option not rated
                                                        option easy
                                                        option medium
                                                        option difficult

                                                
                                            .col-xs-6
                                                label price/person
                                                input#price.form-control(type='text' value="test123" placeholder='$555')
                                            .col-xs-6
                                                label duration
                                                input#duration.form-control(type='text' value="test123" placeholder='5 hours')
                                            .col-xs-6
                                                label maximum group size
                                                input#groupsize.form-control(type='text' value="test123" placeholder='12')


                                            .col-xs-6
                                                label Tour banner Image
                                                .cf-input
                                                    label.custom-file
                                                        input#featured-image.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload tour image gallery
                                                .cf-input
                                                    label.custom-file
                                                        input#gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-12
                                                label tour summary
                                                textarea#summary.form-control.height-120(value="test123" placeholder='simple one liner description')
                                            .col-xs-12
                                                label tour description
                                                textarea#description.form-control.height-120(value="test123" placeholder='long description about tour')
                                                h2#error.fs-title ALL FIELDS ARE REQUIRED

                                        input.next.action-button(type='button' name='next' value='Next' id='next1')
                                    fieldset
                                        h2.fs-title Available Amenities
                                        h3.fs-subtitle Your presence on the social network
                                        .row
                                            .col-md-12
                                                ul.add-amenities
                                                    li
                                                        span.custom-checkbox
                                                            input#1(type='checkbox')
                                                            label(for='1')
                                                        | Satellite TV
