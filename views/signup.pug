extends base

block navigation_content 
    include _navigation
block content 
  body.theme-bg.log-screen(style='background-image:url(/assets/img/banner-log.png)')

  section.log-wrapper
    .container
      .col-md-6.col-md-push-6
        h3.log-title create a new account
        form.form
          .form-group
            .row
              .col-md-6.col-sm-6
                label(for='inputName') Full Name
                input#inputName.form-control(type='name' placeholder='Full Name' required='')
              .col-md-6.col-sm-6
                label(for='inputEmail') Email
                input#inputEmail.form-control(type='email' placeholder='Email' required='')
            .row

              .col-md-6.col-sm-6
                label(for='inputPW') Password
                input#inputPW.form-control(type='password' placeholder='*******' required='')
              .col-md-6.col-sm-6
                label(for='inputPWConfirm') Repeat Password
                input#inputPWConfirm.form-control(type='password' placeholder='*******' required='')
          .form-group
            .row
              .col-md-6.col-sm-6
                button#signup_btn.btn.btn-dark(type='submit') Sign Up
              .col-md-6.col-sm-6
          .log-option
              span OR
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
          .row.mrg-bot-20
              .col-md-6
                  a.fb-log-btn.log-btn(href='#', title='')
                      i.fa.fa-facebook
                      | Sign up With Facebook
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              .col-md-6
                  a.gplus-log-btn.log-btn(href='#', title='')
                      i.fa.fa-google-plus
                      | Sign up With Google+

