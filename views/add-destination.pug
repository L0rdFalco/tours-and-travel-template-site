extends base
block navigation_content 
    include _navigation
block content 
    section.dashboard.gray-bg.padd-0.mrg-top-50
        .container-fluid
            .row
                .col-lg-2.col-md-2.col-sm-3.dashboard-bg
                    // /. NAV TOP
                    nav.navbar.navbar-side
                        // Start Logo Header Navigation
                        .navbar-header
                            button.navbar-toggle(type='button' data-toggle='collapse' data-target='#dashboard-menu')
                                i.fa.fa-bars
                    include _dashboard_sidebar
                    include _location_modal
                    // /. NAV SIDE
                .col-lg-10.col-md-10.col-sm-9.col-lg-push-2.col-md-push-2.col-sm-push-3
                    .row.mrg-0.mrg-top-20
                        .tr-single-box
                            .tr-single-header
                                h3.dashboard-title Add Destination
                            .tr-single-body
                                form#msform
                                    // progressbar
                                    ul#progressbar
                                        li.active Basic Information
                                        li Available Amenities
                                        li Confirmation
                                    // fieldsets
                                    fieldset
                                        .text-center
                                            h2.fs-title Basic Information
                                            h3.fs-subtitle This is step 1
                                        .row
                                            .col-xs-6
                                                label destination Name
                                                input.form-control(type='text' value="test123" placeholder='Galaxy cruiser destination')

                                            .col-xs-6
                                                label Upload itenerary
                                                .cf-input
                                                    label.custom-file
                                                        input#file1.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label(for='destdatepicker1') pick start date
                                                input#destination_datepicker1.datepicker_input.form-control.border-2(type='text',value="test123" required='', placeholder='DD/MM/YYYY')
                                            .col-xs-6
                                                label(for='destdatepicker2') pick end date
                                                input#destination_datepicker2.datepicker_input.form-control.border-2(type='text',value="test123" required='', placeholder='DD/MM/YYYY')
                                                                                        
                                            .col-xs-6
                                                label choose start location
                                                input#destination_location0.form-control(type='text' value="test123" placeholder='lat, long')
                                            .col-xs-6
                                                label choose guide
                                                .sl-box
                                                    select#destination_guide.form-control.wide
                                                        option self-guided
                                                        option guide name 1
                                                        option guide name 2
                                                        option guide name 3
                                                        option guide name 4
                                                        option guide name 5
                                            .col-xs-6
                                                label choose difficulty
                                                .sl-box
                                                    select#destination_rating.form-control.wide
                                                        option not rated
                                                        option easy
                                                        option medium
                                                        option difficult

                                                
                                            .col-xs-6
                                                label price/person
                                                input#destination_price.form-control(type='text' value="test123" placeholder='$555')
                                            .col-xs-6
                                                label duration
                                                input#destination_duration.form-control(type='text' value="test123" placeholder='5 hours')
                                            .col-xs-6
                                                label maximum group size
                                                input#destination_groupsize.form-control(type='text' value="test123" placeholder='12')


                                            .col-xs-6
                                                label destination banner Image
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_featured-image.custom-file-input(type='file')
                                                        span.custom-file-control

                                            .col-xs-6
                                                label Upload destination gallery image 1
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 2
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 3
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-6
                                                label Upload destination gallery image 4
                                                .cf-input
                                                    label.custom-file
                                                        input#destination_gallery.custom-file-input(type='file')
                                                        span.custom-file-control
                                            .col-xs-12
                                                label destination summary
                                                textarea#dn_summary.form-control.height-120(value="test123" placeholder='simple one liner description')
                                            .col-xs-12
                                                label destination description
                                                textarea#dn_description.form-control.height-120(value="test123" placeholder='long description about destination')
                                                h2#error.fs-title ALL FIELDS ARE REQUIRED

                                        input.next.action-button(type='button' name='next' value='Next' id='destination_next1')
                                    fieldset
                                        h2.fs-title Available Amenities
                                        h3.fs-subtitle Your presence on the social network
                                        .row
                                            .col-md-12
                                                ul.add-amenities
