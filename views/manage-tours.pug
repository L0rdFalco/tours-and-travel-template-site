extends base

block navigation_content 
    include _navigation
block content 
    section.dashboard.gray-bg.padd-0.mrg-top-50
        .container-fluid
            .row
                .col-lg-2.col-md-2.col-sm-3.dashboard-bg
                    // /. NAV TOP
                    nav.navbar.navbar-side
                        // Start Logo Header Navigation
                        .navbar-header
                            button.navbar-toggle(type='button' data-toggle='collapse' data-target='#dashboard-menu')
                                i.fa.fa-bars
                        include _dashboard_sidebar
                    // /. NAV SIDE
                .col-lg-10.col-md-10.col-sm-9.col-lg-push-2.col-md-push-2.col-sm-push-3
                    .row.mrg-0.mrg-top-20
                        .tr-single-box
                            .tr-single-header
                                h3.dashboard-title Manage Tours
                            .tr-single-body
                                .row
                                    each doc in payload 
                                        .col-md-4.col-sm-6
                                            article.tour-box.style-1
                                                .tour-box-image
                                                    figure
                                                        a(href='/edit-tour')
                                                            img.img-responsive.listing-box-img(src=`assets/img/tour/${doc.imageCover}` alt='')
                                                            .list-overlay
                                                        .entry-bookmark
                                                            a(href='#')
                                                                i.ti-bookmark
                                                        .tour-time
                                                            i.ti.ti-car
                                                            span= doc.maxGroupSize
                                                        h4.destination-place
                                                            a(href='#')= doc.name
                                                        span.featured-tour
                                                            i.fa.fa-star
                                                        a.list-like.left(href='#')
                                                            i.ti-heart
                                                .entry-meta
                                                    .meta-item.meta-author
                                                        .coauthors
                                                            span.vcard.author
                                                                span.fn
                                                                    a(href='#')
                                                                        img.avatar.avatar-24(alt='' src='assets/img/user-4.jpg' height='24' width='24')
                                                                        = doc.startLocation.address
                                                    .meta-item.meta-comment.fl-right
                                                        i.ti-comment-alt
                                                        span= doc.duration
                                                    .meta-item.meta-rating.fl-right
                                                        i.fa.fa-star
                                                        i.fa.fa-star
                                                        i.fa.fa-star
                                                        i.fa.fa-star
                                                        i.fa.fa-star-half
                                                .inner-box
                                                    .box-inner-ellipsis
                                                        h4.entry-title
                                                            a(href='#')= doc.summary
                                                        .price-box
                                                            .tour-price.fl-right
                                                                i.ti.ti-user
                                                                span.theme-cl.f-bold= `$${doc.price}`

                                .row
                                    ul.pagination
                                        li.page-item
                                            a.page-link(href='#' aria-label='Previous')
                                                span.ti-arrow-left
                                                span.sr-only Previous
                                        li.page-item
                                            a.page-link(href='#') 1
                                        li.page-item
                                            a.page-link(href='#') 2
                                        li.page-item.active
                                            a.page-link(href='#') 3
                                        li.page-item
                                            a.page-link(href='#') 4
                                        li.page-item
                                            a.page-link(href='#') 5
                                        li.page-item
                                            a.page-link(href='#' aria-label='Next')
                                                span.ti-arrow-right
                                                span.sr-only Next
    block content_contact 
        include _contact

